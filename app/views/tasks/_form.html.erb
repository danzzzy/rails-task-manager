  <%= form_for @task do |t| %>
    <% if @task.errors.full_messages.any? %>
      <% @task.errors.full_messages.each do |msg|%>
        <p class="text-warning"><%= msg %></p>
    <% end %>
    <% end %>
    <div class="form-group mt-3">
      <%= t.label :title %>
      <%= t.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
      <%= t.label :details %>
      <%= t.text_field :details, class: 'form-control' %>
    </div>
    <div class="mt-3">
    <% unless @task.new_record?%>
      <%= t.check_box :completed %>
      <%= t.label :completed %>
    <% end %>
    </div>
    <%= t.submit class: 'btn btn-dark m-3' %>
    <%= link_to "Back to list", tasks_path, class: "a-tag" %>
  <% end %>
